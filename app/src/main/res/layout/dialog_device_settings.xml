<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/front_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <TextView
            android:text="@string/device_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal">

            <EditText
                android:layout_width="300dp"
                android:id="@+id/deviceTitleEdit"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/switch_border_line"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/deviceCategorySpinner" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/deviceLocationSpinner" />

            <RadioGroup
                android:checkedButton="@+id/invisible"
                android:id="@+id/visibilitySwitch"
                android:layout_width="300dp"
                android:background="@drawable/switch_border_line"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="40dp">

                <RadioButton
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"
                    android:id="@+id/invisible"
                    android:background="@drawable/switch_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/device_invisible"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/switch_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/device_visible"
                    android:textColor="@android:color/white" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/cancelButton"
                android:text="@string/cancel"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="14sp" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/applyButton"
                android:text="@string/apply"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>