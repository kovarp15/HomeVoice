<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/front_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/relativeLayout">

            <ImageView android:id="@+id/device_grid_item_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sensor"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp" />

            <TextView android:id="@+id/device_grid_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:text="sdfsdfsdfsdfsdfsdfsdfsdf"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/device_grid_item_icon"
                android:layout_toEndOf="@+id/device_grid_item_icon"
                android:layout_alignTop="@+id/device_grid_item_icon" />

            <TextView android:id="@+id/device_grid_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/device_grid_item_seek_bar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />

            <SeekBar android:id="@+id/device_grid_item_seek_bar"
                android:layout_width="match_parent"
                android:max="100"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/device_grid_item_value"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp" />

            <Switch android:id="@+id/device_grid_item_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp" />

            <View android:id="@+id/device_grid_item_rgb_color"
                android:background="@color/colorMain"
                android:visibility="visible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/device_grid_item_switch"
                android:layout_toEndOf="@+id/device_grid_item_switch" />

            <Button android:id="@+id/device_grid_item_toggle"
                android:text=""
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:layout_width="40dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_options"
                android:id="@+id/optionsButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/options"
                android:background="?android:attr/selectableItemBackground" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/black"/>


    </LinearLayout>

</FrameLayout>